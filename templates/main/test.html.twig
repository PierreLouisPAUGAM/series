{% extends 'base.html.twig' %}

{% block body %}
    <h1>Test</h1>
    <div>
        {# Crée et affiche une variable #}
        {% set name = "Pierre-Louis" %}

        <h2>{{ name|upper }}</h2>

        {# Crée et affiche un tableau #}
        {% set colors = ["orange", "brown", "turquoise", "blue"] %}

        <div>Nombre de couleurs : {{ colors|length }}</div>

        {% for color in colors %}
            <div style="background-color: {{ color }}">
                {{ color }}
            </div>
        {% endfor %}

        {# Crée et affiche un objet #}
        {% set book = {
            title: "Pifpaf",
            year: 2000,
            author: "John Doe"}
        %}

        <h3>{{ book.author }}</h3>

        <div>
            {% for key, val in book %}
                <div>
                    {{ key }} : {{ val }}
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}

{% block title %}{{ parent() }} | Test{% endblock %}
